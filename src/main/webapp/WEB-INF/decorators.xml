<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern>

	</excludes>

	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
		<pattern>/views/admin/home.jsp</pattern>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/login</pattern>
	</decorator>

	<decorator name="register" page="register.jsp">
		<pattern>/register</pattern>
	</decorator>
	
	<decorator name="profile" page="profile.jsp">
		<pattern>/profile</pattern>
	</decorator>
	
	<decorator name="resetpassword" page="resetpassword.jsp">
		<pattern>/resetpassword</pattern>
	</decorator>

	<decorator name="web" page="web.jsp">
		<patterns>
			<pattern>*/home*</pattern>
			<pattern>/detail</pattern>
			<pattern>/category</pattern>
			<pattern>/search</pattern>
			<pattern>*/shop*</pattern>
			<pattern>/login</pattern>
			<pattern>/logout</pattern>
			<pattern>/register</pattern>
			<pattern>/loadCartItems</pattern>
			<pattern>/addtocart*</pattern>
			<pattern>/updatequantity</pattern>
			<pattern>/deleteCartItem</pattern>			
			<pattern>/thoat</pattern>	
		</patterns>
	</decorator>

</decorators>
